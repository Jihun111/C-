#pragma warning(disable:4996)
#include<stdio.h>
int input(void);
int main()
{
	int number;
	number = input();
	printf("입력된 값은 8진수로 %#o입니다.\n", number);
	printf("입력된 값은 16진수로 %#x입니다.\n", number);
	return 0;
}
int input(void) {
	int num;
	printf("정수값을 입력하세요 : ");
	scanf("%d", &num);
	return num;
}
